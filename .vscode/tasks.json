{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PlatformIO: Clean + Build (Errors + Warnings Only)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "pio run -t clean; pio run --silent 2>&1 | Select-String -Pattern 'error:', 'warning:'"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
